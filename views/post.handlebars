{{#extend "layouts/main"}}
    {{#content "body"}}
        <h2>{{post.title}}</h2>
        <p>Author: {{post.User.username}}</p>
        <p>{{post.content}}</p>
        <h3>Comments:</h3>
        {{#each post.Comments}}
            <p>{{User.username}}: {{content}}</p>
        {{/each}}

        {{#if session.user}}
            {{#if (eq session.user.id post.userId)}}
                <a href="/posts/{{post.id}}/edit">Edit Post</a>
                <form action="/posts/{{post.id}}/delete" method="post">
                    <button type="submit">Delete Post</button>
                </form>
            {{/if}}
            <a href="/posts/{{post.id}}/comments/add">Add Comment</a>
        {{/if}}
    {{/content}}
{{/extend}}