{{#extend "layouts/main"}}
    {{#content "body"}}
        <h2>{{post.title}}</h2>
        <p>Author: {{post.User.username}}</p>
        <p>{{post.content}}</p>
        <h3>Comments:</h3>
        {{#each post.Comments}}
            <p>{{User.username}}: {{content}}</p>
        {{/each}}
    {{/content}}
{{/extend}}